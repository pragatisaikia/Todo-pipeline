<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>To-Do List</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>To-Do List</h1>
        <form action="/addtask" method="POST">
            <input type="text" name="newtask" placeholder="New task" required>
            <button type="submit">Add Task</button>
        </form>
        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <form action="/removetask" method="POST">
                        <input type="checkbox" name="check" value="<%= task %>" onchange="this.form.submit()">
                        <%= task %>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>
    <script src="/main.js"></script>
</body>
</html>
